<%- include('partials/header') %>

<div class="container">
  <h1 class="mb-4">ðŸ’° Personal Finance Dashboard</h1>

  <div class="row text-center mb-4">
    <div class="col-md-4">
      <div class="card p-3 mb-3">
        <h5>Total Income</h5>
        <h2 class="text-success">â‚¹<%= income %></h2>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card p-3 mb-3">
        <h5>Total Expense</h5>
        <h2 class="text-danger">â‚¹<%= expense %></h2>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card p-3 mb-3">
        <h5>Balance</h5>
        <h2 class="text-info">â‚¹<%= balance %></h2>
      </div>
    </div>
  </div>

  <h4 class="mb-3 text-light">ðŸ“‹ Transaction History</h4>
  <table class="table table-striped table-hover text-light">
    <thead>
      <tr>
        <th>Type</th>
        <th>Category</th>
        <th>Amount</th>
        <th>Description</th>
        <th>Date</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% transactions.forEach(t => { %>
        <tr>
          <td><span class="<%= t.type === 'income' ? 'text-success' : 'text-danger' %> fw-bold"><%= t.type %></span></td>
          <td><%= t.category %></td>
          <td>â‚¹<%= t.amount %></td>
          <td><%= t.description || '-' %></td>
          <td><%= new Date(t.date).toLocaleDateString() %></td>
          <td>
            <form action="/delete/<%= t._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this entry?');">
              <button class="btn btn-sm btn-danger">ðŸ—‘ Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>
